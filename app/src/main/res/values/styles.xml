<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/FontedActionBarMenuText</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/FontedActionBarMenuText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextAppearance">@style/FontedActionBarMenuText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="controlBackground">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/FontedActionBarMenuText</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="controlBackground">@color/colorAccent</item>
    </style>

    <style name="RippleBackgroundView">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="FontedActionBarMenuText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="fontPath">fonts/OpenSans-Light.ttf</item>
    </style>

    <style name="ActionButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/action_btn_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ActionButton.Small" parent="ActionButton">
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">6dp</item>
    </style>

</resources>
